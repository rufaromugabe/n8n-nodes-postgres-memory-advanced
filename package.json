{
  "name": "n8n-nodes-postgres-advanced-memory",
  "version": "2.1.5",
  "description": "Postgres Memory+ node for n8n with schema support, thread management, and optimized semantic search",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "postgres",
    "memory",
    "advanced",
    "semantic-search",
    "rag",
    "vector-store",
    "embeddings",
    "ai"
  ],
  "license": "MIT",
  "homepage": "",
  "author": {
    "name": "Rufaro Mugabe",
    "email": "rufarorevmugabe@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rufaromugabe/n8n-nodes-postgres-memory-advanced.git"
  },
  "engines": {
    "node": ">=20.15"
  },
  "scripts": {
    "build": "npx rimraf dist && tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier \"nodes/**/*.ts\" \"utils/**/*.ts\" --write",
    "lint": "eslint \"nodes/**/*.ts\" \"utils/**/*.ts\" package.json",
    "lintfix": "eslint \"nodes/**/*.ts\" \"utils/**/*.ts\" package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js \"nodes/**/*.ts\" \"utils/**/*.ts\" package.json"
  },
  "files": [
    "dist/**/*",
    "!dist/package.json",
    "!dist/tsconfig.tsbuildinfo"
  ],
  "n8n": {
  "n8nNodesApiVersion": 1,
  "nodes": [
      "dist/nodes/MemoryPostgresAdvanced/MemoryPostgresAdvanced.node.js",
      "dist/nodes/WorkingMemoryTool/WorkingMemoryTool.node.js"
]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "~8.32.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "gulp": "^5.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "@types/pg": "^8.11.0"
  },
  "dependencies": {
    "@langchain/community": "^0.3.0",
    "langchain": "^0.3.0",
    "pg": "^8.11.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}